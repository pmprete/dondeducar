@model string
@{
    ViewBag.Title = "Establecimientos";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>


@* grid *@
<div id="gridEscuelas"></div>
 <div id="pager" style="width:100%;height:20px;"></div> 
@* /grid *@

<script type="text/javascript">
  $(document).ready(function () {
      $.getJSON("@Url.Action("GetEscuelas")", { valorDelTag: '@Model' }, function (data) {

          var dataView = new Slick.Data.DataView();
          dataView.setPagingOptions({
              pageSize: 25,
          });
          
          var grid = new Slick.Grid("#gridEscuelas", data, EDUCAR.Grids.ColumnasEscuelas, EDUCAR.Grids.SlickGridOptions);
        
          var pager = new Slick.Controls.Pager(dataView, grid, $("#pager"));

        });
    });
</script>